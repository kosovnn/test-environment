<package version="1.0">
    <description>Package for self-tests of lib/tool functions</description>
    <author mailto="Artem.Andreev@oktetlabs.ru"/>

    <session>
        <run>
            <script name="readlink"/>
        </run>

        <run>
            <script name="resolvepath"/>
        </run>

        <run name="bufs">
            <session>
                <run>
                    <script name="compare_bufs"/>
                </run>

                <run>
                    <script name="make_bufs"/>
                    <arg name="n_iterations">
                        <value>1000</value>
                    </arg>
                    <arg name="min_len">
                        <value>1</value>
                    </arg>
                    <arg name="max_len">
                        <value>128</value>
                    </arg>
                </run>
            </session>
        </run>

        <run>
            <script name="enum_map"/>
        </run>

        <run>
            <script name="hexdump"/>
        </run>

        <run>
            <script name="intset"/>
        </run>

        <run>
            <script name="string"/>
        </run>

        <run>
            <script name="units"/>
        </run>

        <run>
            <script name="vector"/>
        </run>

        <run>
            <script name="vector_search"/>
        </run>
    </session>
</package>
